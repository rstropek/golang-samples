	"10-pointers": {
		"scope": "go",
		"prefix": "go",
		"body": [
			"package main",
			"",
			"import \"fmt\"",
			"",
			"type person struct {",
			"\tfirstName string",
			"\tlastName string",
			"}",
			"",
			"func main() {",
			"\tx := 42",
			"\tpx := &x",
			"\tfmt.Printf(\"x is at address %v and it's value is %v\\n\", px, *px)",
			"\t",
			"\t*px *= 2",
			"\tfmt.Printf(\"x is at address %v and it's value is %v\\n\", px, *px)",
			"\t",
			"\tpx = new(int)",
			"\tfmt.Printf(\"x is at address %v and it's value is %v\\n\", px, *px)",
			"",
			"\tfunc(val *int) {",
			"\t\t*val = 42",
			"\t}(px)",
			"\tfmt.Printf(\"x is at address %v and it's value is %v\\n\", px, *px)",
			"\t",
			"\tpp := &person{\"Foo\", \"Bar\"}",
			"\tfmt.Printf(\"%s, %s\\n\", pp.lastName, pp.firstName)",
			"\t",
			"\tfunc(somebody *person) {",
			"\t\tsomebody.firstName, somebody.lastName = somebody.lastName, somebody.firstName",
			"\t}(pp)",
			"\tfmt.Printf(\"%s, %s\\n\", pp.lastName, pp.firstName)",
			"}"
		]
	},
